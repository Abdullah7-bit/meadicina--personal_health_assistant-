@model PersonalHealthAssistant.Models.User

@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm())
{
    <div class="register-page">
        <div class="register-box">
            <div class="register-logo">
                <a href=""><b>Registration Form</b></a>
            </div>
            <div class="card">
                <div class="card-body register-card-body">
                    <p class="login-box-msg">Fill Out Carefully</p>

                    <form action="" method="post">
                        <div class="input-group mb-3">                         
                            @Html.EditorFor(m => m.Full_name, new { htmlAttributes = new { @type = "text", @class = "form-control", @placeholder = "Full name" } })

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">                            
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @type = "email", @class = "form-control", @placeholder = "Email" } })

                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">                                                       
                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Password" } })
                                                      
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">  
                            
                                @Html.DropDownListFor(m => m.Role_Id, ViewBag.roleList as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                               
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-arrow-down"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- /.col -->
                            <div class="col-12">                                
                                <button type="submit" class="btn btn-primary btn-block">Register</button>
                            </div>
                            <!-- /.col -->
                        </div>
                        <div class="row">
                            <!-- /.col -->
                            <div class="col-12">
                                <h1>@TempData["msg"]</h1>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                    <a href="login.html" class="text-center">Already have a Account</a>
                </div>
                <!-- /.form-box -->
            </div><!-- /.card -->
        </div>
    </div>
}
