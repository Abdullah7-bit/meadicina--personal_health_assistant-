@model PersonalHealthAssistant.Models.Patient
@{
    ViewBag.Title = "Add_Patients";
}

<center>
    <h2>Profile Update for Patients</h2>
</center>

@using (Html.BeginForm())
{

    <div class="container">
        <div class="card-body">
            <div class="tab-content">
                <!-- Profile -->
                <div class="tab-pane active" id="settings">
                    <form class="form-horizontal">
                        <div class="form-group row">
                            @*Patient Name*@
                            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Patient Address**@
                            <label for="Address" class="col-sm-2 col-form-label">Address</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Patient City*@
                            <label for="City" class="col-sm-2 col-form-label">City</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Patient Phone_number*@
                            <label for="Phone_number" class="col-sm-2 col-form-label">Phone_number</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Phone_number, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Patient Gender*@
                            <label for="Gender" class="col-sm-2 col-form-label">Gender</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Patient Age*@
                            <label for="Age" class="col-sm-2 col-form-label">Age</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Age, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10 ">
                                <button type="submit" class="btn btn-danger">Update</button>
                            </div>
                        </div>
                        <h3 class="text-danger">@TempData["Error_message"]</h3>
                    </form>
                </div>
                <!-- / Profile -->
            </div>
        </div>
    </div>
}

