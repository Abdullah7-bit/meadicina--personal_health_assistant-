@model PersonalHealthAssistant.Models.Doctor
@{
    ViewBag.Title = "Add_Doctors";
}

<center>
    <h2>Profile Update for Doctor</h2>
</center>

@using (Html.BeginForm())
{

    <div class="container">
        <div class="card-body">
            <div class="tab-content">

                <!-- Profile -->
                <div class="tab-pane active" id="settings">
                    <form class="form-horizontal">
                        <div class="form-group row">
                            @*Doctor Name*@
                            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Education*@
                            <label for="Education" class="col-sm-2 col-form-label">Education</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Education, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Available_days*@
                            <label for="Available_days" class="col-sm-2 col-form-label">Available_days</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Available_days, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Available_time*@
                            <label for="Available_time" class="col-sm-2 col-form-label">Available_time</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Available_time, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Hospital*@
                            <label for="inputSkills" class="col-sm-2 col-form-label">Hospital</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Hospital, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @*Doctor Hospital_Address*@
                            <label for="Hospital_Address" class="col-sm-2 col-form-label">Hospital_Address</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Hospital_Address, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor City*@
                            <label for="City" class="col-sm-2 col-form-label">City</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Phone_number*@
                            <label for="Phone_number" class="col-sm-2 col-form-label">Phone_number</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Phone_number, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Gender*@
                            <label for="Gender" class="col-sm-2 col-form-label">Gender</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @*Doctor Fees*@
                            <label for="Fees" class="col-sm-2 col-form-label">Fees</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(m => m.Fees, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10 ">
                                <button type="submit" class="btn btn-danger">Update</button>
                            </div>
                        </div>
                        <h3 class="text-danger">@TempData["Error_message"]</h3>
                    </form>
                </div>
                <!-- / Profile -->
            </div>
        </div>
    </div>
}

